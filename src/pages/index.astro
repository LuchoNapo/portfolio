---
import Layout from "../layouts/Layout.astro";

import "@fontsource/nothing-you-could-do";
import SectionContainer from "../components/SectionContainer.astro";
import Hero from "../components/Hero.astro";
import Experience from "../components/Experience.astro";
import ExperienceIcon from "../icons/ExperienceIcon.astro";
import Projects from "../components/Projects.astro";
import ProjectsIco from "../icons/ProjectsIcon.astro";
import About from "../components/About.astro";
import AboutIcon from "../icons/AboutIcon.astro";
---

<Layout
  title="Porfolio Luciano Napolitano - Desarollador y Programador Web"
  description="Contrata a Luciano Napolitano para desarrollar tu sitio web o aplicación web."
>
  <main>
    <SectionContainer
      class="min-h-[100vh] sm:min-h-[90vh] py-20 w-svw flex flex-col items-center justify-center bg-[url('/images/hero-bg.webp')] md:bg-fixed bg-cover md:bg-bottom bg-[center_top]"
    >
      <Hero />
    </SectionContainer>
    <SectionContainer
      id="experience"
      class="hola md:py-10 py-8 md:w-[740px] w-full px-5"
    >
      <h2
        class="md:text-4xl text-2xl font-bold mb-5 flex items-center gap-2 animate-fadeUp opacity-0"
      >
        <ExperienceIcon />
        Experiencia
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer id="projects" class="w-full py-20 flex flex-col items-center">
      <h2
        class="md:text-4xl text-2xl font-bold md:mb-20 mb-10 px-5 flex items-center gap-2 md:justify-center"
      >
        <ProjectsIco />
        Proyectos
      </h2>
      <div class="lg:grid lg:grid-cols-2 lg:justify-items-center flex flex-col items-center xs:mx-5 md:gap-10 sm:mx-20 2xl:w-[1280px]">
        <Projects />
      </div>
    </SectionContainer>
    <SectionContainer
      id="about"
      class="flex items-center flex-col"
    >
      <h2 class="md:text-4xl text-2xl font-bold mb-5 flex items-center gap-2">
        <AboutIcon />
        Sobre mí
      </h2>
      <About />
    </SectionContainer>
  </main>
</Layout>
<style>
  h2 {
    animation-delay: 500ms;
  }
</style>
