<style>
  .welcome {
    width: 15.8ch;
    white-space: nowrap;
    border-right: 4px solid;
    animation:
      typing 1.5s steps(18),
      blink 0.5s infinite step-end alternate;
    overflow: hidden;
  }

  @keyframes typing {
    from {
      width: 0;
    }
  }
  @keyframes blink {
    50% {
      border-color: transparent;
    }
  }
</style>
