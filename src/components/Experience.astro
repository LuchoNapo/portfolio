---
import ExperienceItem from "./ExperienceItem.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const EXPERIENCE = [
  {
    date: t("experience.item1.time"),
    title: "AENIMA AGENCY",
    subtitle: t("experience.item1.subtitle"),
    description: t("experience.item1.body"),
    link: "https://aenima.agency/",
    badge: "Now",
  },
  {
    date: t("experience.item2.time"),
    title: "FREELANCE",
    subtitle: t("experience.item2.subtitle"),
    description: t("experience.item2.body"),
  },
];
---

<ol class="relative border-s-2 border-gray-700 ml-3 mt-10 pt-1">
  {EXPERIENCE.map((experience) => <ExperienceItem {...experience} />)}
</ol>
