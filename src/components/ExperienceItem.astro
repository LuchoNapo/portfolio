---
import Badge from "./Badge.astro";

interface Props {
  date: string;
  title: string;
  subtitle: string;
  description: string;
  link?: string;
  badge?: string;
}
const { date, title, subtitle, description, link, badge } = Astro.props;
---

<li class="mb-10 ms-4 px-4">
  <div
    class="dot absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-2 border border-white dark:border-gray-900 dark:bg-cyan-300"
  >
  </div>
  <div class="flex items-center gap-3">
    <h3 class="md:text-2xl text-lg font-semibold text-cyan-200">
      {title}
    </h3>
    {badge && (
      <Badge>{badge}</Badge> 
    )}
  </div>

  <time
    class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
    >{date}</time
  >
  <h4>{subtitle}</h4>
  <p
    class="mb-4 md:text-lg font-normal text-gray-500 dark:text-gray-400 text-balance"
  >
    {description}
  </p>
  {
    link && (
      <a
        href={link}
        target="_blank"
        rel="noopener"
        class="inline-flex items-center py-2 md:text-lg font-medium text-gray-900  hover:text-cyan-300  focus:z-10 focus:ring-1 focus:outline-none focus:ring-gray-100 focus:text-cyan-600 dark:text-cyan-200  dark:hover:text-cyan-400 transition-all duration-300"
      >
        Echa un vistazo{" "}
        <svg
          class="w-3 h-3 ms-2 rtl:rotate-180"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"
          />
        </svg>
      </a>
    )
  }
</li>

