---
import LinkedInIcon from "../icons/LinkedInIcon.astro";
import MailIcon from "../icons/MailIcon.astro";
import WppIcon from "../icons/WppIcon.astro";
import CurriculumIcon from "../icons/CurriculumIcon.astro";
---

<footer
  class="text-nowrap pb-20 relative bg-[#05b3a4] min-h-28 w-full flex items-center flex-col mt-52"
>
  <div class="waves">
    <div class="wave" id="wave1"></div>
    <div class="wave" id="wave2"></div>
    <div class="wave" id="wave3"></div>
    <div class="wave" id="wave4"></div>
  </div>
  <div class="flex gap-6 md:flex-row flex-col items-center md:items-end md:justify-around w-full">
    <h2 class="text-3xl md:text-xl lg:text-3xl font-nothing font-bold">Luciano Napolitano</h2>
    <a
      class="flex items-end gap-1  font-bold text-xl md:text-xl lg:text-xl hover:text-cyan-950 transition-colors duration-700 md:mr-0 mr-5"
      target="_blank"
      href="Luciano Napolitano Curriculum.pdf"><CurriculumIcon />Descarga mi CV</a
    >
    <div class="flex flex-col gap-2 lg:gap-4 items-center md:mt-0 ">
      <h2 id="contact" class="text-xl font-bold"> Contactame!</h2>
      <ul class="flex sm:gap-4 gap-3 items-center">
        <li>
          <a
            class="flex gap-1 hover:scale-110 transform transition duration-300"
            href="https://www.linkedin.com/in/luciano-napolitano/"
          >
            <LinkedInIcon />
            <p class="text-md">LinkedIn</p>
          </a>
        </li>
        <li>
          <a
            class="flex gap-1 hover:scale-110 transform transition duration-300"
            href="mailto:luciano_napo@hotmail.com;"
          >
            <MailIcon />
            <p class="text-md">Mail</p>
          </a>
        </li>
        <li>
          <a
            class="flex gap-1 hover:scale-110 transform transition duration-300"
            href="https://wa.me/542615055103?text=Hola%2C%20me%20comunico%20desde%20tu%20porfolio"
          >
            <WppIcon />
            <p class="text-md">WhatsApp</p>
          </a>
        </li>
      </ul>
    </div>
  </div>
</footer>

<style>
  .wave {
    position: absolute;
    top: -100px;
    left: 0;
    width: 100%;
    height: 100px;
    background: url("https://i.imgur.com/ZAts69f.png");
    background-size: 1000px 100px;
  }

  .wave#wave1 {
    z-index: 1000;
    opacity: 1;
    bottom: 0;
    animation: animateWaves 4s linear infinite;
  }

  .wave#wave2 {
    z-index: 999;
    opacity: 0.5;
    bottom: 10px;
    animation: animate 4s linear infinite !important;
  }

  .wave#wave3 {
    z-index: 1000;
    opacity: 0.2;
    bottom: 15px;
    animation: animateWaves 3s linear infinite;
  }

  .wave#wave4 {
    z-index: 999;
    opacity: 0.7;
    bottom: 20px;
    animation: animate 3s linear infinite;
  }

  @keyframes animateWaves {
    0% {
      background-position-x: 1000px;
    }
    100% {
      background-positon-x: 0px;
    }
  }

  @keyframes animate {
    0% {
      background-position-x: -1000px;
    }
    100% {
      background-positon-x: 0px;
    }
  }
</style>
